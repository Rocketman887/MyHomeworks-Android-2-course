<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/between_icon_info"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/between_icon_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin = "300dp"
        />
    <FrameLayout
        android:id="@+id/info"
        android:orientation="vertical"
        android:layout_height="300dp"
        android:layout_width="300dp"
        android:textAlignment="center"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/between_icon_info">
    <TextView
        android:id="@+id/brand"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />
        <TextView
            android:id="@+id/model"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/horsepower"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/engine_capacity"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/type_of_drive"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="160dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/max_speed"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>