<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/car_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBaseline_toBaselineOf="@id/car_mini_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <LinearLayout
        android:id="@+id/car_mini_info"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/car_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:orientation="vertical"
        android:textAlignment="center">
        <TextView
            android:id="@+id/brand_info"
            android:layout_height="22dp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/model_info"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/horsepower_info"
            android:layout_height="22dp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        <TextView
        android:id="@+id/engine_capacity_info"
        android:layout_height="22dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:textColor="@color/black"
        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>