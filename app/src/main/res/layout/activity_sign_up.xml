<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SignUpActivity">
    <TextView
        android:id="@+id/facebook"
        android:layout_width="413dp"
        android:layout_height="65dp"
        android:text="@string/facebook"
        android:textColor="@android:color/white"
        android:background="#1847F3"
        android:textAlignment="center"
        android:paddingTop="0dp"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/between_facebook_inputs"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/between_facebook_inputs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="65dp" />
    <EditText
        android:id="@+id/name_input"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/border_for_text_view_sign_up"
        android:hint="@string/name_input_string"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:textColorHint="#BDC7D8"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/between_facebook_inputs"
        app:layout_constraintBottom_toTopOf="@id/surname_input"
        app:layout_constraintVertical_chainStyle="spread"/>


    <EditText
        android:id="@+id/surname_input"
        android:background="@drawable/border_for_text_view_sign_up"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:hint="@string/surname_input_string"
        android:textSize="18sp"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:paddingStart="10dp"
        android:textColorHint="#BDC7D8"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_input"
        app:layout_constraintBottom_toTopOf="@id/city_input"/>

    <EditText
        android:id="@+id/city_input"
        android:background="@drawable/border_for_text_view_sign_up"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:hint="@string/city_input_string"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#BDC7D8"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/surname_input"
        app:layout_constraintBottom_toTopOf="@id/work_place_input"/>

    <EditText
        android:id="@+id/work_place_input"
        android:background="@drawable/border_for_text_view_sign_up"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:hint="@string/work_place_input_string"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#BDC7D8"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_input"
        app:layout_constraintBottom_toTopOf="@id/email_input"/>

    <EditText
        android:id="@+id/email_input"
        android:background="@drawable/border_for_text_view_sign_up"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:hint="@string/email_input_string"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#BDC7D8"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/work_place_input"
        app:layout_constraintBottom_toBottomOf="@id/between_inputs_button"/>
    <androidx.constraintlayout.widget.Guideline
        android:id = "@+id/between_inputs_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="555dp"
        />
    <Button
        android:id = "@+id/sign_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_button"
        android:text="@string/sign_up_button_string"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="23sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/between_inputs_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>